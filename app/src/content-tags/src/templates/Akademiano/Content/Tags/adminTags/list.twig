{% extends "adminLayout.twig" %}

{% block mainContainer %}
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Тэги</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>id</th>
                    <th>title</th>
                    <th>description</th>
                    <th>dictionaries</th>
                    <th>created</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for item in items %}
                    <tr>
                        <td>
                            {{ item.id.hex }}
                        </td>
                        <td>
                            {{ item.title }}
                        </td>
                        <td>
                            {{ item.description }}
                        </td>
                        <td>
                            {% if not item.dictionaries.empty %}
                                <ul>
                                    {% for dictionary in item.dictionaries %}
                                        <li><a href="{{ url(constant('\\Akademiano\\Content\\Tags\\AdminDictionariesRoutesStore::EDIT_ROUTE'), {"id": dictionary.id.hex}) }}">{{ dictionary.title }}</a></li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                <div style="text-align: center">&mdash;</div>
                            {% endif %}
                        </td>
                        <td>
                            {{ item.created |date("d.m.Y") }}
                        </td>
                        <td>
                            <a href="{{ url(item_edit_route, {"id": item.id.hex}) }}" rel="tooltip" title="Edit"
                               class="btn btn-warning btn-simple btn-sm">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="{{ url(item_delete_route, {"id": item.id.hex}) }}" rel="tooltip" title="Delete"
                               class="btn btn-danger btn-simple btn-sm">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <a href="{{ url(item_add_route) }}" class="btn btn-success btn-sm" role="button">Добавить</a>
        </div>
        <!-- box-footer -->
    </div>
    <!-- /.box -->
{% endblock mainContainer %}
