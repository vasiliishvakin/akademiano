{% extends "layout.twig" %}

{% block mainContainerContent %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-1">{{ item.owner.email }}</div>
                        <div class="col-md-1 offset-md-9">{{ item.date|date("d.m.Y") }}</div>
                    </div>
                </div>
                <div class="card-block">
                    <h3 class="card-title">{{ item.title }}</h3>
                    <div class="card-text">
                        <table class="table table-responsive table-hover table-outline mb-0">
                            <thead class="thead-default">
                            <tr>
                                <th>from</th>
                                <th>to</th>
                                <th>type</th>
                                <th>status</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td>{{ item.from.title }}</td>
                                <td>{{ item.to.title }}</td>
                                <td>
                                    {% if item.status.int == constant("Akademiano\\HeraldMessages\\Model\\Status::STATUS_NEW") %}
                                        <i class="fa fa-envelope-o" aria-hidden="true"></i>
                                    {% else %}
                                        <i class="fa fa-question" aria-hidden="true"></i>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if item.status.int == constant("Akademiano\\HeraldMessages\\Model\\Status::STATUS_NEW") %}
                                        <i class="fa fa-file-o" aria-hidden="true"></i>
                                    {% elseif item.status.int == constant("Akademiano\\HeraldMessages\\Model\\Status::STATUS_DONE") %}
                                        <i class="fa fa-check-square-o"></i>
                                    {% elseif item.status.int == constant("Akademiano\\HeraldMessages\\Model\\Status::STATUS_DO") %}
                                        <i class="fa fa-hourglass-start" aria-hidden="true"></i>
                                    {% elseif item.status.int == constant("Akademiano\\HeraldMessages\\Model\\Status::STATUS_ERROR") %}
                                        <i class="fa fa-exclamation" aria-hidden="true"></i>
                                    {% else %}
                                        <i class="fa fa-question" aria-hidden="true"></i>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <td colspan="4">{{ item.content }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock mainContainerContent %}



