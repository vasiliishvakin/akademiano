{% extends "adminLayout.twig" %}

{% block mainContainer %}
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Список Групп</h3>
            <div class="box-tools pull-right">
                <!-- Collapse Button -->
                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
            <!-- /.box-tools -->
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table class="table table-bordered table-hover">
                    <thead class="thead-default">
                    <tr>
                        <th>id</th>
                        <th>title</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in items %}
                        <tr>
                            <td>
                                {{ item.id.hex }}
                            </td>
                            <td>
                                {{ item.title }}
                            </td>
                            <td>
                                <a href="{{ url(item_edit_route, {"id": item.id.hex}) }}" rel="tooltip" title="Edit Task" class="btn btn-warning btn-simple btn-sm">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="{{ url(item_delete_route, {"id": item.id.hex}) }}" rel="tooltip" title="Delete" class="btn btn-danger btn-simple btn-sm">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <a href="{{ url(item_add_route) }}" class="btn btn-success btn-sm" role="button">Добавить группу</a>
        </div>
        <!-- box-footer -->
    </div>
    <!-- /.box -->
{% endblock mainContainer %}
